<%= link_to category_url(category) do %>
  <div class="p-2 mb-3 flex justify-between items-center border bg-white border-3 shadow-lg rounded">
    <div class="flex items-center">
      <% if category.icon.present? %>
        <%= image_tag category.icon, class: "image w-20 h-20 mr-2" %>
      <% end %>
      <div>
          <h3 class="font-bold capitalize" style= 'color: #6b737d;'><%= category.name %></h3>
          <p style= 'color: #6b737d; margin-top: 0.7rem;'><%= category.created_at.strftime("%d %b %Y") %></p>
      </div>
    </div>
    <p class="font-bold" style= 'color: #434b54;'>$<%= category.total_amount %></p>
  </div>
<%end%>
